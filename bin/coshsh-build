#!/usr/bin/env python
# Copyright (C) : Gerhard Lausser, gerhard.lausser@consol.de

from optparse import OptionParser
import ConfigParser
import sys
import os
import shutil


sys.path.append(os.path.join(os.path.dirname(__file__), '..'))
sys.path.append(os.path.join(os.path.dirname(__file__), '..', 'coshsh'))
sys.path.insert(0, os.path.join(os.path.dirname(__file__), '..', 'sites', 'default', 'classes'))

from log import logger
from generator import Generator
from coshshsite import Site
from datasource import Datasource, DatasourceNotAvailable


class GeneratorMessage(object):
    def __init__(self, message):
        self.message = message

class WarningMessage(GeneratorMessage):
    pass

class CriticalMessage(GeneratorMessage):
    pass

class OkMessage(GeneratorMessage):
    pass


if __name__ == '__main__':
    VERSION = "1.0"


    parser = OptionParser(
        "%prog [options] --config configfile [--config additional_config_file]",
        version="%prog " + VERSION)
    parser.add_option('--config', action='store',
                      dest="config_file",
                      help='Config file')
    parser.add_option('--site', action='store',
                      dest="default_site",
                      help="Only create a config for <site>")

    opts, args = parser.parse_args()
    generator = Generator()
    if opts.config_file:
        site_configs = {}
        datasource_configs = {}
        config = ConfigParser.ConfigParser()
        config.read(opts.config_file)
        if config._sections == {}:
            print "Bad or missing config file : %s " % opts.config_file
            sys.exit(2)
            
        for ds in [section for section in config.sections() if section.startswith('datasource_')]:
            datasource_configs[ds.replace("datasource_", "", 1).lower()] = config.items(ds) + [('name', ds.replace("datasource_", "", 1).lower())]
        for site in [section for section in config.sections() if section.startswith('site_')]:
            site_configs[site.replace("site_", "", 1).lower()] = config.items(site) + [('name', site.replace("site_", "", 1).lower())]

        sites = []
        if opts.default_site:
            sites = [opts.default_site.lower()]
        else:
            if "defaults" in config.sections() and "sites" in [c[0] for c in config.items("defaults")]:
                sites = [site.lower() for site in dict(config.items("defaults"))["sites"].split(",")]
            else:
                sites = site_configs.keys()
        for site in sites:
            if site in site_configs.keys():
                generator.add_site(**dict(site_configs[site]))
                for ds in generator.sites[site].datasource_names:
                    if ds in datasource_configs.keys():
                        generator.sites[site].add_datasource(**dict(datasource_configs[ds]))
                    else:
                        parser.error("Datasource %s is unknown" % ds)
            else:
                parser.error("Site %s is unknown" % site)
    else:
        parser.error("Use option -c/--config")
    if args:
        parser.error("Does not accept any argument. Use option -c/--config")
    #if len(generator.datasources) == 0:
    #   parser.error("None of the configured datasources was found")

    # nagios_dir config option sets an alternative target
    # and may be used to replace Coshsh.base_dir
    generator.run()

